# -*- coding: utf-8 -*-
# vim: ft=jinja

{% import_yaml "wireguard/defaults.yaml" as defaults %}
{% import_yaml "wireguard/osmap.yaml" as osmap %}

{% set wireguard = salt['grains.filter_by'](
    defaults,
    merge=salt['grains.filter_by'](
        osmap,
        grain='os',
        merge=salt['pillar.get']('wireguard:lookup', {}),
    ),
    base='wireguard')
%}
